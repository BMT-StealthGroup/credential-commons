{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "civ:Credential:Identity",
  "type": "object",
  "properties": {
    "id": {
      "type": [
        "null",
        "string"
      ]
    },
    "issuer": {
      "type": "string"
    },
    "issued": {
      "type": "string"
    },
    "identifier": {
      "type": "string"
    },
    "version": {
      "type": "number"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "claims": {
      "type": "object",
      "properties": {
        "identity": {
          "type": "object",
          "properties": {
            "name": {
              "type": "object",
              "properties": {
                "first": {
                  "type": "string"
                },
                "last": {
                  "type": "string"
                },
                "nickname": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "signature": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "merkleRoot": {
          "type": "string"
        },
        "anchor": {
          "type": "string"
        },
        "leaves": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "identifier": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "claimPath": {
                "type": "string"
              },
              "targetHash": {
                "type": "string"
              },
              "proof": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "right": {
                      "type": "string"
                    },
                    "left": {
                      "type": "string"
                    }
                  },
                  "required": []
                }
              }
            },
            "required": []
          }
        }
      }
    }
  },
  "additionalProperties": false
}